@using DanderiTV.Layer.Application.Models.Genres;
@model SaveGenreModel;
@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Save Genre";
}

<div class="container">
    <div class="col-6 offset-3">
        <h1>
            @(editMode ? $"Edit genre: {Model.Name}" : "New genre")
        </h1>
        <form class="needs-validation" method="post" asp-controller="Genre" asp-action="@(editMode ? "Edit" : "Create")" novalidate="">
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="Name" placeholder="" required="">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="mt-3">
                <button class="btn btn-success" type="submit">Save</button>
                <a asp-controller="Genre" asp-action="Index" class="btn btn-warning">Go back</a>
            </div>
        </form>
    </div>


</div>




