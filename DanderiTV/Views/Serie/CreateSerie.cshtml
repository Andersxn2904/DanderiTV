@using DanderiTV.Layer.Application.Models.Serie;
@model SaveSerieModel;
@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Create Serie";
}

<div class="container">
    <div class="col-6 offset-3">
        <h1>
            @(editMode ? $"Edit series: {Model.Name}" : "New series")
        </h1>
        <form class="needs-validation" method="post" asp-controller="Serie" asp-action="@(editMode ? "Edit" : "Create")" novalidate="">
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="Name" class="form-label">Tittle</label>
                    <input type="text" asp-for="Name" class="form-control" id="Name" placeholder="" required="">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="CoverUrl" class="form-label">Cover URL</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-link-45deg" viewBox="0 0 16 16">
                                <path d="M4.715 6.542 3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1 1 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4 4 0 0 1-.128-1.287z" />
                                <path d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 1 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 1 0-4.243-4.243z" />
                            </svg>
                        </span>
                        <input asp-for="CoverUrl" type="text" class="form-control" id="username" placeholder="Username" required="">
                        <span asp-validation-for="CoverUrl" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <label asp-for="VideoUrl" class="form-label">Video URL</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-link-45deg" viewBox="0 0 16 16">
                                <path d="M4.715 6.542 3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1 1 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4 4 0 0 1-.128-1.287z" />
                                <path d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 1 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 1 0-4.243-4.243z" />
                            </svg>
                        </span>
                        <input asp-for="VideoUrl" type="text" class="form-control" id="username" placeholder="Username" required="">
                        <span asp-validation-for="VideoUrl" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <label asp-for="ProducerID" class="form-label">Producer</label>
                    <select asp-for="ProducerID" asp-items="@(new SelectList(Model.Producers, "Id", "Name"))" class="form-select" id="country">
                        <option value="">Choose...</option>
                    </select>
                    <span asp-validation-for="ProducerID" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="MainGenreID" class="form-label">Main Genre</label>
                    <select asp-for="MainGenreID" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))" class="form-select">
                        <option value="0">Choose...</option>
                    </select>
                    <span asp-validation-for="MainGenreID" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="SecondaryGenreID" class="form-label">Secundary Genre</label>
                    <select asp-for="SecondaryGenreID" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))" class="form-select" id="state" required="">
                        <option value="">Choose...</option>
                    </select>
                    <span asp-validation-for="SecondaryGenreID" class="text-danger"></span>
                </div>
            </div>

            <input type="hidden" asp-for="Id" />
            <div class="mt-3">
                <button class="btn btn-success" type="submit">Save</button>
                <a asp-controller="Series" asp-action="Index" class="btn btn-warning">Go back</a>
            </div>
        </form>
    </div>


</div>
